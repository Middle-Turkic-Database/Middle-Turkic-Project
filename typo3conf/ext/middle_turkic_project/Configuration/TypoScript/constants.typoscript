### PAGE ###
############
page {
    logo {
        file = EXT:middle_turkic_project/Resources/Public/Images/logo.svg
        fileInverted = EXT:middle_turkic_project/Resources/Public/Images/logo-inverted.svg
        height = 100
        width = 192
        alt = Middle Turkic Project
        linktitle = Middle Turkic Project
    }
    favicon {
        file = EXT:middle_turkic_project/Resources/Public/Icons/favicon.ico
    }
    fluidtemplate {
        layoutRootPath = EXT:middle_turkic_project/Resources/Private/Layouts/Page/
        partialRootPath = EXT:middle_turkic_project/Resources/Private/Partials/Page/
        templateRootPath = EXT:middle_turkic_project/Resources/Private/Templates/Page/
    }
    theme {
      navigation {
        type = top
        # cat=bootstrap package: navigation/151/102; type=int[1-5]; label=Mian Navigation Levels
        mainNavigationLevels = 3
      }
    }
}


